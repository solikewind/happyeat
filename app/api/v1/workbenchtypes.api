import "../base/orderbase.api"

// 工作台展示待处理订单（默认 created/paid/preparing）；出单用 PUT /order/:id/status { "status": "completed" }
type ListWorkbenchOrdersReq {
	Current  uint64 `json:"current"`
	PageSize uint64 `json:"pageSize"`
	Status   string `json:"status,optional"` // 不传则默认查 created,paid,preparing
}
type ListWorkbenchOrdersReply {
	Orders []Order `json:"orders"`
	Total  uint64  `json:"total"`
}
